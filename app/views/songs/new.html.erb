<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.text_field :artist_name %>
  <%= f.text_field :genre_name, list: "song_genre_autocomplete", id: "song_genre_id" %>
  <datalist id="song_genre_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>

  <input name="song[note_contents][]" id="song_notes_1">
  <input name="song[note_contents][]" id="song_notes_2">
  <input name="song[note_contents][]" id="song_notes_3">
  <input name="song[note_contents][]" id="song_notes_4">
  <br />

  <%= f.submit %>
<% end %>


